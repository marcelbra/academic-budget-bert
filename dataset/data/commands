python3 prepare_data.py \
    --dataset_path /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/0_LexicalScores \
    --working_dir /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia_Test/ \
    --num_workers 30 \
    --ram_size 32 \
    --num_train_shards 1024 \
    --num_test_shards 512 \
    --frac_test 0.1

# 1. Create new dataset from LexicalScores annotated dataset
# Any operation / filter can be applied to this dataset
#
python3 create_new_dataset.py \
    --num_workers 30 \
    --dir /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/0_LexicalScores \
    -o /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/1_Dropped/


# 2. Create n partitions of raw huggingface wikipedia (we need this in case of limited RAM)
#
#
python3 process_raw_to_shardable.py \
    --dir /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/1_Dropped/ \
    --o /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/2_Split/ \
    --splits 4


# 3. Shard partions
#
#
python3 shard_partitions.py \
    --dir /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/2_Split/ \
    --o /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/3_Shards/ \
    --num_train_shards 1024 \
    --num_test_shards 512 \
    --frac_test 0.1


# 3. Rename shards to unique names
#
#
python3 rename_files_in_shard.py \
    --dir /home/marcelbraasch/PycharmProjects/academic-budget-bert/dataset/data/Wikipedia/3_Shards/

